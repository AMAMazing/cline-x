{
  "manifest_version": 3,
  "name": "Claude API Bridge",
  "version": "1.0",
  "description": "Bridge between Cline and Claude web interface",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "https://claude.ai/*",
      "http://localhost:3000/*"
    ],
    "js": ["content.js"]
  }],
  "web_accessible_resources": [{
    "resources": ["content.js"],
    "matches": ["<all_urls>"]
  }]
}
